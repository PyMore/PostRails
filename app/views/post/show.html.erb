
<h1>Post</h1>

<section>
		<div class="grid">
		    <div class="row">
			 <% @Posts.each do |post| %>
            
			 	<div class="col s6 m3">
					 <div class="card blue-grey darken-1">
			            <div class="card-content white-text">
			              <span class="card-title"> <%= post.title %></span>
						 		<p><%= post.text %></p>						 		
			            </div>
			            <div class="card-action">
			            	<a href="/posts/"></a>
			            	  <%= link_to 'More info', showby_path(post) %>
					          <%= link_to 'Delate',post_new_path %>
			            </div>
			          </div>			 		
			 	</div>

			 <% end -%>
		    </div>	
		</div>	
</section>

